{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "types": [],
    "lib": ["dom", "es2018", "es2015.collection", "es2015.iterable"]
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "enableIvy": false
  },
  "exclude": [
    "**/*.spec.ts",
    "src/tests/**"
  ]
}
